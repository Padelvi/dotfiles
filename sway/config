# Set basic variables
    set $mod Mod4
#
# Background
    output * bg /home/padelvi/.local/share/wallpapers/arch.png fill
#
# Basic key bindings
    bindsym $mod+Return exec kitty
    bindsym $mod+Shift+q kill
    bindsym $mod+a exec swaymsg "workspace Ulauncher; exec ulauncher"
    bindsym $mod+Shift+r reload
    bindsym $mod+l exec swaylock -eFi /home/padelvi/.local/share/wallpapers/lock.jpg
    bindsym $mod+Shift+l exec systemctl suspend
    floating_modifier $mod normal
#
# Ulauncher with no window borders
    for_window [app_id="ulauncher"] border pixel 0
#
# Moving and focusing
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right
#
# Workspaces
    set $w1 "1: Term"
    set $w2 "2: Browser"
    set $w3 "3: Spotify"
    set $w4 "4: Obsidian"
    set $w5 "5: Klavaro"
    set $w6 "6: Postman"
    set $wothers "Others"

    bindsym $mod+1 workspace $w1
    bindsym $mod+2 workspace $w2
    bindsym $mod+3 workspace $w3
    bindsym $mod+4 workspace $w4
    bindsym $mod+5 workspace $w5
    bindsym $mod+6 workspace $w6
    bindsym $mod+0 workspace $wothers
    bindsym $mod+Shift+1 move container to workspace $w1
    bindsym $mod+Shift+2 move container to workspace $w2
    bindsym $mod+Shift+3 move container to workspace $w3
    bindsym $mod+Shift+4 move container to workspace $w4
    bindsym $mod+Shift+5 move container to workspace $w5
    bindsym $mod+Shift+6 move container to workspace $w6
    bindsym $mod+Shift+0 move container to workspace $wothers

    assign [app_id="kitty"] $w1
    assign [class="firefox"] $w2
    assign [class="Spotify"] $w3
    assign [class="obsidian"] $w4
    assign [app_id="klavaro"] $w5
    assign [class="Postman"] $w6
    assign [class="GParted"] $wothers
    assign [class="Matplotlib"] $wothers
    assign [app_id="mpv"] $wothers
    assign [app_id="pavucontrol"] $wothers
    assign [app_id="ulauncher"] "Ulauncher"

    workspace $w1 output HDMI-A-1
    workspace $w2 output HDMI-A-1
    workspace $w3 output HDMI-A-1
    workspace $w4 output HDMI-A-1
    workspace $w5 output HDMI-A-1
    workspace $w6 output HDMI-A-1
    workspace $wothers output eDP-1
    workspace "Ulauncher" output eDP-1
#
# Layout
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split
    bindsym $mod+f fullscreen
    bindsym $mod+d focus child
    bindsym $mod+Shift+d focus parent
    bindsym $mod+space floating toggle
#
# Playerctl
    bindsym $mod+backslash exec playerctl --player=spotify play-pause
    bindsym $mod+apostrophe exec playerctl --player=spotify previous
    bindsym $mod+quotedbl exec playerctl --player=spotify next
    bindsym $mod+Control+comma exec playerctl --player=spotify position 5-
    bindsym $mod+Control+period exec playerctl --player=spotify position 5+
    bindsym $mod+Control+Right exec playerctl --player=spotify volume .1+
    bindsym $mod+Control+Left exec playerctl --player=spotify volume .1-
    bindsym $mod+Shift+backslash exec playerctl -a stop
    bindsym $mod+Control+Up exec pactl set-sink-volume @DEFAULT_SINK@ +5%
    bindsym $mod+Control+Down exec pactl set-sink-volume @DEFAULT_SINK@ -5%
#
# Swayosd
    bindsym --release Caps_Lock exec swayosd-client --caps-lock
    bindsym XF86AudioRaiseVolume exec swayosd-client --output-volume 5
    bindsym XF86AudioLowerVolume exec swayosd-client --output-volume -5
    bindsym XF86AudioMute exec swayosd-client --output-volume mute-toggle
#
# Resize mode
    mode "resize" {
        bindsym Left resize shrink width 10px
        bindsym Down resize grow height 10px
        bindsym Up resize shrink height 10px
        bindsym Right resize grow width 10px
        bindsym $mod+Left focus left
        bindsym $mod+Down focus down
        bindsym $mod+Up focus up
        bindsym $mod+Right focus right
        bindsym Escape mode "default"
    }
    bindsym $mod+r mode "resize"
#

include '$(/usr/libexec/sway/layered-include "/usr/share/sway/config.d/*.conf" "/etc/sway/config.d/*.conf" "${XDG_CONFIG_HOME:-$HOME/.config}/sway/config.d/*.conf")'

exec kitty
exec firefox-developer-edition
exec waybar
exec swaync
exec swayosd-server
