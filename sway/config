    # bindsym $mod+Control+Right exec playerctl --player=spotify position 5+
    # bindsym $mod+Control+Up exec playerctl --player=spotify volume .1+
    # bindsym $mod+Control+Down exec playerctl --player=spotify volume .1-
    # bindsym $mod+Shift+backslash exec playerctl -a stop
#
# Flameshot
    # bindsym $mod+slash exec $flameshot gui
    # bindsym $mod+Shift+slash exec $flameshot screen -p ~/Templates/screenshots
#
# Resize mode
    mode "resize" {
        bindsym Left resize shrink width 10px
        bindsym Down resize grow height 10px
        bindsym Up resize shrink height 10px
        bindsym Right resize grow width 10px
        bindsym $mod+Left focus left
        bindsym $mod+Down focus down
        bindsym $mod+Up focus up
        bindsym $mod+Right focus right
        bindsym Escape mode "default"
    }
    bindsym $mod+r mode "resize"
#

include '$(/usr/libexec/sway/layered-include "/usr/share/sway/config.d/*.conf" "/etc/sway/config.d/*.conf" "${XDG_CONFIG_HOME:-$HOME/.config}/sway/config.d/*.conf")'

