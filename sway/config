# Set basic variables and mod keys
    set $mod Mod4
    set $alt Mod1
    floating_modifier $mod normal
#
# Background
    output * bg $HOME/.local/share/wallpapers/River.png fill
#
# Miscellaneous key bindings
    bindsym $mod+Return exec kitty
    bindsym $mod+Shift+q kill
    bindsym $mod+a exec swaymsg "workspace Ulauncher; exec ulauncher"
    bindsym $mod+Shift+r reload
    bindsym $mod+l exec wlogout
    bindsym $mod+n exec swaync-client -t -sw
    bindsym $mod+c exec hyprpicker -a
#
# Ulauncher with no window borders
    for_window [app_id="ulauncher"] border pixel 0
#
# Moving and focusing
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right
#
# Workspaces
    set $w1 "1: Term"
    set $w2 "2: Browser"
    set $w3 "3: Spotify"
    set $wothers "Others"

    bindsym $mod+1 workspace $w1
    bindsym $mod+2 workspace $w2
    bindsym $mod+3 workspace $w3
    bindsym $mod+0 workspace $wothers
    bindsym $mod+Shift+1 move container to workspace $w1
    bindsym $mod+Shift+2 move container to workspace $w2
    bindsym $mod+Shift+3 move container to workspace $w3
    bindsym $mod+Shift+0 move container to workspace $wothers

    assign [app_id="kitty"] $w1
    assign [class="firefox"] $w2
    assign [class="Spotify"] $w3
    assign [app_id="pavucontrol"] $wothers
    assign [app_id="ulauncher"] "Ulauncher"

    workspace $w1 output HDMI-A-1
    workspace $w2 output HDMI-A-1
    workspace $w3 output HDMI-A-1
    workspace $wothers output eDP-1
    workspace "Ulauncher" output eDP-1
#
# Layout
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split
    bindsym $mod+f fullscreen
    bindsym $mod+d focus child
    bindsym $mod+Shift+d focus parent
    bindsym $mod+space floating toggle
#
# Playerctl
    bindsym $mod+backslash exec playerctl --player=spotify play-pause
    bindsym $mod+apostrophe exec playerctl --player=spotify previous
    bindsym $mod+quotedbl exec playerctl --player=spotify next
    bindsym $mod+Control+comma exec playerctl --player=spotify position 5-
    bindsym $mod+Control+period exec playerctl --player=spotify position 5+
    bindsym $mod+Control+Right exec playerctl --player=spotify volume .1+
    bindsym $mod+Control+Left exec playerctl --player=spotify volume .1-
    bindsym $mod+Shift+backslash exec playerctl -a stop
#
# Base16 colorschemes
    set $base00 #2E3440
    set $base01 #3B4252
    set $base02 #434C5E
    set $base03 #4C566A
    set $base04 #D8DEE9
    set $base05 #E5E9F0
    set $base06 #ECEFF4
    set $base07 #8FBCBB
    set $base08 #BF616A
    set $base09 #D08770
    set $base10 #EBCB8B
    set $base11 #A3BE8C
    set $base12 #88C0D0
    set $base13 #81A1C1
    set $base14 #B48EAD
    set $base15 #5E81AC

    client.focused          $base05 $base13 $base00 $base13 $base13
    client.focused_inactive $base01 $base01 $base05 $base03 $base01
    client.unfocused        $base01 $base00 $base05 $base01 $base01
    client.urgent           $base08 $base08 $base00 $base08 $base08
#
# Resize mode
    mode "Resize" {
        bindsym Left resize shrink width 10px
        bindsym Down resize grow height 10px
        bindsym Up resize shrink height 10px
        bindsym Right resize grow width 10px
        bindsym $mod+Left focus left
        bindsym $mod+Down focus down
        bindsym $mod+Up focus up
        bindsym $mod+Right focus right

        bindsym $mod+$alt+k mode "Keys"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
    }
    bindsym $mod+r mode "Resize"
#
# Shotman
    bindsym $mod+o exec shotman --capture window
    bindsym $mod+Shift+o exec shotman --capture window -C
    bindsym $mod+p exec shotman --capture region
    bindsym $mod+Shift+p exec shotman --capture region -C
#
# Special keys, char mode
    mode "Keys" {
        bindsym $alt+n exec wtype ñ
        bindsym $alt+Shift+slash exec wtype ¿
        bindsym $alt+Shift+1 exec wtype ¡
        bindsym $alt+a exec wtype á
        bindsym $alt+Shift+a exec wtype Á
        bindsym $alt+e exec wtype é
        bindsym $alt+Shift+e exec wtype É
        bindsym $alt+i exec wtype í
        bindsym $alt+Shift+i exec wtype Í
        bindsym $alt+o exec wtype ó
        bindsym $alt+Shift+o exec wtype Ó
        bindsym $alt+u exec wtype ú
        bindsym $alt+Shift+u exec wtype Ú

        bindsym $mod+r mode "Resize"
        bindsym Escape mode "default"
        bindsym $mod+$alt+k mode "default"
    }
    bindsym $mod+$alt+k mode "Keys"
#
# Including other files
    include '$("/usr/share/sway/config.d/*.conf" "/etc/sway/config.d/*.conf" "${XDG_CONFIG_HOME:-$HOME/.config}/sway/config.d/*.conf")'
#
# Exec
    # cliphist stuff
    exec cliphist wipe
    exec wl-paste --watch cliphist store

    # Kitty and firefox
    exec kitty
    exec firefox

    # Waydroid
    exec waydroid session start

    # Waybar
    exec dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK
    exec sass --watch $HOME/dotfiles/waybar/style.scss $HOME/dotfiles/waybar/style.css
    exec waybar

    # Swaync
    exec sass --watch $HOME/dotfiles/swaync/style.scss $HOME/dotfiles/swaync/style.css
    exec swaync

    # Pipewire
    exec pipewire
    exec pipewire-pulse
    exec pipewire-media-session

    # My gsettings script
    exec_always $HOME/dotfiles/sway/import-gsettings.sh
#
