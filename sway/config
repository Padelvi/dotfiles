# Set basic variables
    set $mod Mod4
    # set $postman flatpak run com.getpostman.Postman
    # set $spotify flatpak run com.spotify.Client
    # set $obsidian flatpak run md.obsidian.Obsidian
    # set $firefox flatpak run org.mozilla.firefox
    # set $whatsapp flatpak run io.github.mimbrero.WhatsAppDesktop
    # set $flameshot flatpak run org.flameshot.Flameshot
    # set $wildcard flatpak run com.felipekinoshita.Wildcard
#
# Background
    output * bg /home/padelvi/.local/share/wallpapers/arch.jpg fill
#
# Basic key bindings
    bindsym $mod+Return exec kitty
    bindsym $mod+Shift+q kill
    bindsym $mod+a exec swaymsg "workspace Ulauncher; exec ulauncher"
    bindsym $mod+Shift+r reload
    bindsym $mod+l exec swaylock
    floating_modifier $mod normal
#
# Ulauncher with no window borders
    for_window [app_id="ulauncher"] border pixel 0
#
# Moving and focusing
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right
#
# Workspaces
    set $w1 "1: Term"
    set $w2 "2: Browser"
    set $w3 "3: Spotify"
    set $w4 "4: Obsidian"
    set $w5 "5: Whatsapp"
    set $w6 "6: Postman"
    set $w7 "7: Corechess"
    set $w8 "8: Klavaro"
    set $w9 "9: Libreoffice"
    set $wothers "Others"

    bindsym $mod+1 workspace $w1
    bindsym $mod+2 workspace $w2
    bindsym $mod+3 workspace $w3
    bindsym $mod+4 workspace $w4
    bindsym $mod+5 workspace $w5
    bindsym $mod+6 workspace $w6
    bindsym $mod+7 workspace $w7
    bindsym $mod+8 workspace $w8
    bindsym $mod+9 workspace $w9
    bindsym $mod+0 workspace $wothers
    bindsym $mod+Shift+1 move container to workspace $w1
    bindsym $mod+Shift+2 move container to workspace $w2
    bindsym $mod+Shift+3 move container to workspace $w3
    bindsym $mod+Shift+4 move container to workspace $w4
    bindsym $mod+Shift+5 move container to workspace $w5
    bindsym $mod+Shift+6 move container to workspace $w6
    bindsym $mod+Shift+7 move container to workspace $w7
    bindsym $mod+Shift+8 move container to workspace $w8
    bindsym $mod+Shift+9 move container to workspace $w9
    bindsym $mod+Shift+0 move container to workspace $wothers

    assign [app_id="kitty"] $w1
    assign [class="firefox"] $w2
    assign [class="Spotify"] $w3
    assign [class="obsidian"] $w4
    assign [class="whatsapp-desktop-linux"] $w5
    assign [class="Postman"] $w6
    assign [class="CoreChess"] $w7
    assign [app_id="klavaro"] $w8
    assign [app_id="libreoffice"] $w9
    assign [app_id="libreoffice-math"] $w9
    assign [app_id="libreoffice-writer"] $w9
    assign [app_id="libreoffice-impress"] $w9
    assign [app_id="libreoffice-base"] $w9
    assign [app_id="libreoffice-calc"] $w9
    assign [app_id="libreoffice-draw"] $w9
    assign [app_id="thunar"] $wothers
    assign [app_id="com.felipekinoshita.Wildcard"] $wothers
    assign [app_id="blueman-manager"] $wothers
    assign [class="GParted"] $wothers
    assign [class="balena-etcher"] $wothers
    assign [class="Matplotlib"] $wothers
    assign [app_id="org.kde.ark"] $wothers
    assign [app_id="transmission-gtk"] $wothers
    assign [app_id="sway-input-config"] $wothers
    assign [app_id="mpv"] $wothers
    assign [app_id="ulauncher"] "Ulauncher"

    workspace $w1 output HDMI-A-1
    workspace $w2 output HDMI-A-1
    workspace $w3 output HDMI-A-1
    workspace $w4 output HDMI-A-1
    workspace $w5 output HDMI-A-1
    workspace $w6 output HDMI-A-1
    workspace $w7 output HDMI-A-1
    workspace $w8 output HDMI-A-1
    workspace $w9 output HDMI-A-1
    workspace $wothers output eDP-1
    workspace "Ulauncher" output eDP-1
#
# Layout
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split
    bindsym $mod+f fullscreen
    bindsym $mod+d focus child
    bindsym $mod+Shift+d focus parent
    bindsym $mod+space floating toggle
#
# Playerctl
    # bindsym $mod+backslash exec playerctl --player=spotify play-pause
    # bindsym $mod+apostrophe exec playerctl --player=spotify previous
    # bindsym $mod+quotedbl exec playerctl --player=spotify next
